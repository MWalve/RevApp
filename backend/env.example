# Environment
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# LLM Provider: "ollama" (default), "groq", or "huggingface"
LLM_PROVIDER=ollama

# Ollama Settings (if using Ollama)
OLLAMA_MODEL=llama3.2
OLLAMA_BASE_URL=http://localhost:11434

# Optional: Groq API Key (if using Groq - free tier available)
GROQ_API_KEY=

# Optional: HuggingFace API Key (if using HuggingFace Inference)
HUGGINGFACE_API_KEY=

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_TOP_K=3

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-distilroberta-v1
EMBEDDING_DEVICE=cpu

# Optional: Supabase (for future user data integration)
SUPABASE_URL=
SUPABASE_KEY=


